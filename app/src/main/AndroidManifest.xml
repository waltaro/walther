<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.walterngo.walther"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Walther.Base.Theme.Light">
        <activity android:name="com.walterngo.walther.application.presentation.activities.MainActivity">
        </activity>
        <activity android:name="com.walterngo.walther.application.presentation.activities.SplashActivity"
            android:theme="@style/Walther.Theme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>